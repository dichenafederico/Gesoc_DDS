{{#partial "contenido"}}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a routerLink="/home">Inicio</a>
        </li>
        <li class="breadcrumb-item active">Alta de egresos</li>
    </ol>
    <div class="row">
        <div class="col-md-8">
            <h1>Alta de egreso</h1>
            <form action="/egreso" method='post'>

                <div>
                    <label>Proveedor*</label>
                    <select class="form-control" name="proveedor">
                        {{#each proveedores}}
                            <option value={{id}}>{{nombre}}</option>
                        {{/each}}
                    </select>
                </div>

                <div>
                    <label>Medio de pago*</label>
                    <select class="form-control" name="medioPago">
                        {{#each mediosDePago}}
                            <option value="{{id}}">{{nombre}}</option>
                        {{/each}}
                    </select>
                </div>

                <div>
                    <label>Usuario verificador*</label>
                    <select class="form-control" name="usuarioVerificador">
                        {{#each usuarios}}
                            <option value={{id}}>{{nombre}}</option>
                        {{/each}}
                    </select>
                </div>

                <div>
                    <label for="descripcionItem">Descripcion*</label>
                    <input class="form-control" type="text" name="descripcionItem" required="true"/>
                    <label for="valorItem">Valor*</label>
                    <input class="form-control" type="number" min="0" name="valorItem" required="true"/>
                    <small class="form-text" style="color:red">{{errorValorItem}}</small>
                </div>

                <div>
                    <label>Etiqueta</label>
                    <select class="form-control" name="etiqueta">
                        {{#each etiquetas}}
                            <option>{{this}}</option>
                        {{/each}}
                    </select>
                    <small class="form-text text-muted">Seleccione una etiqueta para el egreso</small>
                </div>

                <br><br>

                <input type="submit" class="btn btn-lg btn-primary btn-block" formmethod="post" value="Crear"></input>
                <br>
            </form>
        </div>
    </div>

{{/partial}}
{{>layout.html.hbs}}
